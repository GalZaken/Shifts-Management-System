<div class="container" dir="rtl">
    <!-- FIRST RAW DIV FOR WELLCOME AND MANAGER MASSAGES -->
    <div class="row">
        <!-- WELCOME -->
        <div class="col-lg-4" id="wellcome">
            <div class="panel panel-default">
                <div class="panel-body">ברוך הבא {{ currentUser.username + " " }} </div>
            </div>
        </div>
        <!--END OF WELCOME -->

        <!--MASSAGE -->
        <div class="col-lg-8" id="manager-msg">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="pull-left">
                        <a class="glyphicon glyphicon-pencil" style="cursor: pointer" data-toggle="modal" data-target="#editMessageModal" ng-show="isAdmin()"></a>
                    </div>
                    <h3 class="panel-title">הודעות מנהל</h3>
                </div>
                <div class="panel-body">
                    {{ displayedComment }}
                </div>
            </div>
            <!--END OF MASSAGE -->
        </div>
    </div>
    <!-- END OF FIRST RAW -->

    <!-- SECONED ROW FOR CURRENT SHIFTS -->
    <div class="row splliter" ng-show="!isAdmin()">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">סידור לשבוע נוכחי</h3>
            </div>
            <div class="panel-body">
                <br>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>משמרות</th>
                        <td>יום ראשון<br>{{ currentWeekDaysArray[0] }}</td>
                        <td>יום שני<br>{{ currentWeekDaysArray[1] }}</td>
                        <td>יום שלישי<br>{{ currentWeekDaysArray[2] }}</td>
                        <td>יום רביעי<br>{{ currentWeekDaysArray[3] }}</td>
                        <td>יום חמישי<br>{{ currentWeekDaysArray[4] }}</td>
                        <td>יום שישי<br>{{ currentWeekDaysArray[5] }}</td>
                        <td>יום שבת<br>{{ currentWeekDaysArray[6] }}</td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>  בוקר
                            16:00 - 8:00
                        </td>
                        <td ng-repeat="shift in morningShift track by $index">
                            {{ shift }}
                        </td>
                    </tr>
                    <tr>
                        <td>  ערב
                            16:00 - 8:00
                        </td>
                        <td ng-repeat="shift in eveningShift track by $index">
                            {{ shift }}
                        </td>
                    </tr>
                    <tr>
                        <td>  לילה
                            8:00 - 23:00
                        </td>
                        <td ng-repeat="shift in morningShift track by $index">
                            {{ shift }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- END OF SECONED ROW -->

    <!-- THIRD ROW FOR NEXT WEEK SHIFTS -->
    <div class="row splliter" ng-show="!isAdmin()">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">סידור לשבוע הבא</h3>
            </div>
            <div ng-show="!nextSchedule.published">
                <div class="panel-body">אין סידור לשבוע הבא !</div>
            </div>
            <div ng-show="nextSchedule.published">
                <br>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>משמרות</th>
                        <td>יום ראשון<br>{{ nextWeekDaysArray[0] }}</td>
                        <td>יום שני<br>{{ nextWeekDaysArray[1] }}</td>
                        <td>יום שלישי<br>{{ nextWeekDaysArray[2] }}</td>
                        <td>יום רביעי<br>{{ nextWeekDaysArray[3] }}</td>
                        <td>יום חמישי<br>{{ nextWeekDaysArray[4] }}</td>
                        <td>יום שישי<br>{{ nextWeekDaysArray[5] }}</td>
                        <td>יום שבת<br>{{ nextWeekDaysArray[6] }}</td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>  בוקר
                            16:00 - 8:00
                        </td>
                        <td ng-repeat="shift in nextMorningShift track by $index">
                            {{ shift }}
                        </td>
                    </tr>
                    <tr>
                        <td>  ערב
                            16:00 - 8:00
                        </td>
                        <td ng-repeat="shift in nextEveningShift track by $index">
                            {{ shift }}
                        </td>
                    </tr>
                    <tr>
                        <td>  לילה
                            8:00 - 23:00
                        </td>
                        <td ng-repeat="shift in nextNightShift track by $index">
                            {{ shift }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
    <!-- END OF THIRD ROW -->

    <!-- Edit Message Modal (admin only) -->
    <div id="editMessageModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal Content-->
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <div class="col-md-6">
                        <button type="button" class="close pull-left" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="col-md-6">
                        <h3 class="modal-title">ערוך הודעה</h3>
                    </div>
                </div>
                <!-- End of Modal Header -->

                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="form-group">
                        <textarea class="form-control" rows="5" id="adminComment" ng-model="comment"></textarea>
                    </div>
                </div>
                <!-- End of Modal Body -->

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="updateAdminComment()">שמור</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">בטל</button>
                </div>
                <!-- End of Modal Footer -->
            </div>
            <!-- End of Modal Content -->
        </div>
        <!-- End of Modal Dialog -->
    </div>
    <!-- End of Edit Message Modal -->
</div>