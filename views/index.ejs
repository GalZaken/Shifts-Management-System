<!DOCTYPE html>
<html ng-app="ShiftsManagerApp">
<head>
  <title>Dashboard</title>
  <!-- CUSTOM CSS: -->
  <link rel='stylesheet' href='/css/custom/style.css' />
  <link rel='stylesheet' href='/css/custom/profile.css' />
  <link rel='stylesheet' href='/css/custom/schedule.css' />
  <link rel='stylesheet' href='/css/custom/employees.css' />
  <link rel='stylesheet' href='/css/custom/home.css' />
  <!-- BOOTSTRAP CSS: -->
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' />
</head>
<body>
<header>
  <div id = 'myId'>
    <div class="container" id="header" dir=rtl>
      <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="nav-header">
            <!-- Brand logo -->
            <a href="/" class="navbar-brand navbar-right">TEVA</a>

            <!-- Collapse button -->
            <button type="button" class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse" area-expended="false">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <!-- Menu -->
          <div class="collapse navbar-collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav navbar-right hidden-xs">
              <li><a href="/employees"><span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;רשימת עובדים</a></li>
              <li><a href="/schedule"><span class="glyphicon glyphicon-calendar"></span>&nbsp;&nbsp;סידור עבודה</a></li>
              <li><a href="/"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;בית</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right visible-xs">
              <li><a href="/"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;בית</a></li>
              <li><a href="/schedule"><span class="glyphicon glyphicon-calendar"></span>&nbsp;&nbsp;סידור עבודה</a></li>
              <li><a href="/employees"><span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;רשימת עובדים</a></li>
            </ul>

            <!-- My Account -->
            <ul class="nav navbar-nav navbar-left">
              <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;<%= username %>&nbsp;&nbsp;<strong class="caret"></strong></a>
                <ul class="dropdown-menu pull-right">
                  <li><a href="/profile"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;פרופיל</a></li>
                    <%if (isAdmin) { %>
                  <li><a href="/settings"><span class="glyphicon glyphicon-wrench"></span>&nbsp;&nbsp;הגדרות</a></li>
                    <% } %>
                  <li class="divider hidden-xs"></li>
                  <li><a href="/logout"><span class="glyphicon glyphicon-off"></span>&nbsp;&nbsp;התנתק</a></li>
                </ul>
              </li>
            </ul>
          </div> <!-- End navbar-collapse -->
        </div> <!-- End container -->
      </div> <!-- End navbar -->
    </div> <!-- End container -->
  </div>
</header><!-- End of header -->

<main>
  <div class="navbar-overlap" ng-view>
    <!-- NG-VIEW-->
  </div>
</main><!-- End of main -->

<footer>
</footer><!-- End of footer -->

<!-- ************************* SCRIPTS: ************************* -->

<!-- jQuery: -->
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

<!-- Bootstrap: -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<!-- Angular: -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.32/angular.min.js"></script>
<script src="https://code.angularjs.org/1.2.32/angular-route.min.js"></script>

<!-- Dashboard: -->
<script src="js/appRouting.js"></script>

<!-- Controllers: -->
<script src="js/controllers/homeCtrl.js"></script>
<script src="js/controllers/profileCtrl.js"></script>
<script src="js/controllers/settingsCtrl.js"></script>
<script src="js/controllers/scheduleCtrl.js"></script>
<script src="js/controllers/employeesCtrl.js"></script>

<!-- ************************* END OF SCRIPTS ************************* -->
</body>
</html>
